<?xml version="1.0"?>
<robot name="davinci" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find davinci_description)/robots/davinci_link_macro.xacro" />

  <xacro:davinci_link name="p4_rcm_base"
    color="slate">
    <inertial>
      <origin
        xyz="-0.141020957350944 1.21214233081955E-17 0.0663841857186647"
        rpy="0 0 0" />
      <mass
        value="0.621071194298928" />
      <inertia
        ixx="1" ixy="0" ixz="0"
                iyy="1" iyz="0"
                        izz="1" />
    </inertial>
  </xacro:davinci_link>

  <xacro:davinci_link name="p4_rcm_pivot_plate"
    color="slate">
    <inertial>
      <origin
        xyz="-0.0349 0.0169 -0.0063"
        rpy="0 0 0" />
      <mass
      value="0.2829" />
      <inertia
        ixx="1" ixy="0" ixz="0"
                iyy="1" iyz="0"
                        izz="1" />
    </inertial>
  </xacro:davinci_link>

  <joint name="p4_hand_roll"
    type="revolute">
    <origin
      xyz="-0.0425 0 0.1610"
      rpy="0 0 0" />
    <parent
      link="p4_rcm_base" />
    <child
      link="p4_rcm_pivot_plate" />
    <axis
      xyz="1 0 0" />
    <limit
      lower="-1.5708"
      upper="1.5708"
      effort="1"
      velocity="1" />
    <dynamics
      damping="0"/>
  </joint>

  <xacro:davinci_link name="p4_rcm_parallelogram_base"
    color="slate">
    <inertial>
      <origin
        xyz="-0.0085 0 -0.0484"
        rpy="0 0 0" />
      <mass
        value="1" />
      <inertia
        ixx="1" ixy="0" ixz="0"
                iyy="1" iyz="0"
                        izz="1" />
    </inertial>
  </xacro:davinci_link>

  <joint name="p4_hand_pitch"
    type="revolute">
    <origin
      xyz="0 0 0"
      rpy="0 -0.2888 0" />
    <parent
      link="p4_rcm_pivot_plate" />
    <child
      link="p4_rcm_parallelogram_base" />
    <axis
      xyz="0 1 0" />
    <limit
      lower="-0.8"
      upper="1.0"
      effort="1"
      velocity="1" />
    <dynamics damping="0"/>
  </joint>

  <xacro:davinci_link name="p4_rcm_parallelogram_upper_bar"
    color="slate">
    <inertial>
      <origin
        xyz="0.263815 0 0"
        rpy="0 0 0" />
      <mass
        value="0.447188" />
      <inertia
        ixx="1" ixy="0" ixz="0"
                iyy="1" iyz="0"
                        izz="1" />
    </inertial>
  </xacro:davinci_link>

  <joint name="p4_rcm_upper_bar_base_joint"
    type="continuous">
    <origin
      xyz="0.0108 0 0.1864"
      rpy="3.14159 0.28881 0" />
    <parent
      link="p4_rcm_parallelogram_base" />
    <child
      link="p4_rcm_parallelogram_upper_bar" />
    <axis
      xyz="0 1 0" />
    <mimic
      joint="p4_hand_pitch"
      multiplier="1.0"
      offset="0.0" />
    <dynamics
      damping="0"/>
  </joint>

  <xacro:davinci_link name="p4_rcm_instrument_holder"
    color="slate">
    <inertial>
      <origin
        xyz="0.010300 0 0.115001"
        rpy="0 0 0" />
      <mass
        value="1.367004" />
      <inertia
        ixx="1" ixy="0" ixz="0"
                iyy="1" iyz="0"
                        izz="1" />
    </inertial>
  </xacro:davinci_link>

  <joint name="p4_rcm_instrument_holder_upper_bar_joint"
    type="continuous">
    <origin
      xyz="0.52 0 0"
      rpy="3.141593 0 0" />
    <parent
      link="p4_rcm_parallelogram_upper_bar" />
    <child
      link="p4_rcm_instrument_holder" />
    <axis
      xyz="0 -1 0" />
    <mimic
      joint="p4_hand_pitch"
      multiplier="-1.0"
      offset="0.0" />
    <dynamics
      damping="0"/>
  </joint>

  <joint name="p4_instrument_slide"
    type="prismatic">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="p4_rcm_instrument_holder" />
    <child
      link="needle_driver_house" />
    <axis
      xyz="0 0 -1" />
    <limit
      lower="0"
      upper="0.3"
      effort="1"
      velocity="1" />
    <dynamics damping="0"/>
  </joint>

</robot>
